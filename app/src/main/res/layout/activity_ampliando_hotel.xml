<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmpliandoHotel">

    <ImageView
        android:id="@+id/FotoAmpliandoHotel1"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/hotel1"
        android:scaleType="fitXY"
        app:layout_constraintVertical_bias="0"
        />
    <TextView
        android:id="@+id/NombreAmpliandoHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/FotoAmpliandoHotel1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintVertical_bias="0.05"
        android:text="El Refugio"
        android:textSize="26dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/PrecioAmpliandoHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 80000 Cop"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NombreAmpliandoHotel"
        app:layout_constraintVertical_bias="0.0"

        />

    <TextView
        android:id="@+id/Ampliadocelularhotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel: 3102325680"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PrecioAmpliandoHotel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ResenaAmpliandohotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Elegancia y serenidad se fusionan. Vistas asombrosas, atenciÃ³n impecable y escape perfecto para relajarse."
        android:textSize="16dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Ampliadocelularhotel"
        app:layout_constraintVertical_bias="0.08" />

    <Button
        android:id="@+id/Botonampliandohotel"
        android:backgroundTint="@color/lightseagreen"
        android:text="Reserva"
        android:textSize="25dp"
        android:layout_marginHorizontal="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ResenaAmpliandohotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"/>




</androidx.constraintlayout.widget.ConstraintLayout>