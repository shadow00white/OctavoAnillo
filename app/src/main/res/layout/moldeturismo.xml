<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="359dp"
        android:layout_height="516dp">

        <ImageView
            android:id="@+id/turismo1"
            android:layout_width="335dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/sitioturistico1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.074" />

        <TextView
            android:id="@+id/nombreturismo"
            android:layout_width="174dp"
            android:layout_height="36dp"
            android:text="Gampling"
            android:textAlignment="center"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/turismo1"
            app:layout_constraintVertical_bias="0.079" />

        <TextView
            android:id="@+id/contactoTurismo"
            android:layout_width="119dp"
            android:layout_height="39dp"
            android:text="Contacto:"
            android:textSize="23dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nombreturismo"
            app:layout_constraintVertical_bias="0.107" />

        <TextView
            android:id="@+id/gmailTurismo"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="info@rioclaroreservanatural.com"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nombreturismo"
            app:layout_constraintVertical_bias="0.531" />

        <TextView
            android:id="@+id/precioturismo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100.000"
            android:textSize="23dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nombreturismo"
            app:layout_constraintVertical_bias="0.886"

            />

        <TextView
            android:id="@+id/contactoturismo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono: 3102325680 "
            android:textSize="23dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.384"
            app:layout_constraintStart_toEndOf="@id/precioturismo"
            app:layout_constraintTop_toBottomOf="@id/nombreturismo"
            app:layout_constraintVertical_bias="0.886" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>



