<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmpliandoRestaurante">


    <ImageView
        android:id="@+id/AmpliandoRestauranteFoto"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/restaurante1"
        android:scaleType="fitXY"
        app:layout_constraintVertical_bias="0"
        />

    <TextView
        android:id="@+id/NombreAmpliandoRestaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cascada y Sabor"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AmpliandoRestauranteFoto"
        app:layout_constraintVertical_bias="0.046" />

    <TextView
        android:id="@+id/PrecioAmpliandoRestaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" $110.000 CO"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toEndOf="@id/NombreAmpliandoRestaurante"
        app:layout_constraintTop_toBottomOf="@id/AmpliandoRestauranteFoto"
        app:layout_constraintVertical_bias="0.046"

        />
    <TextView
        android:id="@+id/AmpliandocelulaRestaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel: 3102325680"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PrecioAmpliandoRestaurante"
        app:layout_constraintVertical_bias="0.027" />


    <TextView
        android:id="@+id/comentarioAmpliandoRestaurante"
        android:layout_width="295dp"
        android:layout_height="56dp"
        android:text="Experiencia culinaria excepcional, platos deliciosos y un ambiente encantador. Una visita obligada."
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AmpliandocelulaRestaurante"
        app:layout_constraintVertical_bias="0.053" />

    <ImageView
        android:id="@+id/FotoAmpliandoRestautante2"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_marginBottom="188dp"
        android:scaleType="fitXY"
        android:src="@drawable/cascadaysabor2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comentarioAmpliandoRestaurante"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/FotoAmpliandoRestaurante3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/cascadaysabor3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toEndOf="@id/FotoAmpliandoRestautante2"
        app:layout_constraintTop_toBottomOf="@id/comentarioAmpliandoRestaurante"
        app:layout_constraintVertical_bias="0.064" />

    <RatingBar
        android:id="@+id/valoracionampliandoRestaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:progressTint="@color/darkgoldenrod"
        android:rating="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FotoAmpliandoRestaurante3"
        app:layout_constraintVertical_bias="0.483" />

    <Button
        android:id="@+id/botonampliandoRestaurante"
        android:backgroundTint="@color/lightseagreen"
        android:text="RESERVAR"
        android:textSize="25dp"
        android:layout_marginHorizontal="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/valoracionampliandoRestaurante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"/>
</androidx.constraintlayout.widget.ConstraintLayout>




